; ~/.gitconfig

[user]
	name = gruvw
	email = gruvw.dev@gmail.com

[init]
	defaultBranch = main

[credential]
	helper = store

[pull]
	rebase = false

[merge]
  conflictstyle = diff3
	tool = code

[mergetool]
	writeToTemp = true
	keepBackup = false

[mergetool "code"]
	cmd = code --wait -m $REMOTE $LOCAL $BASE $MERGED

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    navigate = true
    ; side-by-side = true
    theme = Monokai Extended

[diff]
    colorMoved = default
